{
  "manifest_version": 3,
  "name": "Silo",
  "version": "0.1.0",
  "description": "Don't let good ideas scatter.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/default-favicon.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}